<UserControl
    x:Class="ArchiveMaster.Views.StringListEditor"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:FzLib.Avalonia.Controls"
    xmlns:cvt="clr-namespace:ArchiveMaster.Converters;assembly=ArchiveMaster.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="using:GroupBox.Avalonia.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:v="using:ArchiveMaster.Views"
    xmlns:vm="clr-namespace:ArchiveMaster.ViewModels"
    x:Name="root"
    HorizontalAlignment="Center"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  无数据时，新增按钮无边距，居中；否则，提供左边和下面的边距  -->
    <Interaction.Behaviors>
        <DataTriggerBehavior
            Binding="{Binding $parent[UserControl].ItemsSource.Count}"
            Value="0">
            <ChangePropertyAction
                PropertyName="Margin"
                TargetObject="btnAdd"
                Value="0" />
        </DataTriggerBehavior>
        <DataTriggerBehavior
            Binding="{Binding $parent[UserControl].ItemsSource.Count}"
            ComparisonCondition="NotEqual"
            Value="0">
            <ChangePropertyAction
                PropertyName="Margin"
                TargetObject="btnAdd"
                Value="8,0,0,6" />
        </DataTriggerBehavior>
    </Interaction.Behaviors>

    <UserControl.Resources>
        <system:Double x:Key="TagHeight">28</system:Double>
        <system:Double x:Key="ScrollBarSize">6</system:Double>
        <CornerRadius x:Key="TagCornerRadius">16</CornerRadius>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Button.Circle">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Width" Value="{StaticResource TagHeight}" />
            <Setter Property="Height" Value="{StaticResource TagHeight}" />
            <!--  按钮里的字，默认有点靠下，通过设置Padding来向上移动  -->
            <Setter Property="Padding" Value="0,0,0,3" />
            <Setter Property="CornerRadius" Value="{StaticResource TagCornerRadius}" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Style Selector="^:disabled">
                <Setter Property="IsVisible" Value="False" />
            </Style>
        </Style>

        <Style Selector="TextBox.Tag">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Height" Value="{StaticResource TagHeight}" />
            <Setter Property="MinHeight" Value="{StaticResource TagHeight}" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Style Selector="^:pointerover">
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </Style>
            <Style Selector="^:disabled">
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </Style>
            <Style Selector="^:focus">
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </Style>
        </Style>

    </UserControl.Styles>
    <DockPanel LastChildFill="True">
        <Button
            x:Name="btnAdd"
            Background="{DynamicResource ButtonBackground}"
            Classes="Transparent Circle"
            Click="AddButton_Click"
            Content="+"
            DockPanel.Dock="Right" />

        <ScrollViewer
            x:Name="scr"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled">

            <ItemsControl
                x:Name="items"
                Margin="0,0,0,6"
                ItemsSource="{Binding $parent[UserControl].ItemsSource}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Horizontal"
                            Spacing="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="5,0,0,0"
                            Background="{DynamicResource ButtonBackground}"
                            CornerRadius="{StaticResource TagCornerRadius}">
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="4">
                                <TextBox
                                    Classes="Tag"
                                    KeyDown="TextBox_KeyDown"
                                    Text="{Binding Value}" />
                                <Button
                                    Classes="Transparent Circle"
                                    Click="RemoveButton_Click"
                                    Content="×" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>