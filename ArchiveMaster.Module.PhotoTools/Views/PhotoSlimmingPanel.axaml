<v:TwoStepPanelBase
    x:Class="ArchiveMaster.Views.PhotoSlimmingPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ct="using:FzLib.Avalonia.Controls"
    xmlns:cvt="using:ArchiveMaster.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gb="using:GroupBox.Avalonia.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="using:ArchiveMaster.Views"
    xmlns:vm="clr-namespace:ArchiveMaster.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:PhotoSlimmingViewModel"
    mc:Ignorable="d">
    <v:TwoStepPanelBase.ConfigsContent>
        <StackPanel>
            <ct:StackFormItemGroup>
                <ct:FormItem Label="源目录：">
                    <v:FilePickerTextBox
                        FileNames="{Binding Config.SourceDir}"
                        Filter="{Binding Config.Filter}"
                        IsFilterBarVisible="True"
                        Type="OpenFolder" />
                </ct:FormItem>
                <ct:FormItem Label="目标目录：">
                    <v:FilePickerTextBox
                        FileNames="{Binding Config.DistDir}"
                        Type="OpenFolder" />
                </ct:FormItem>
                <ct:FormItem Label="导出选项：">
                    <ct:WrapFormItemGroup>
                        <ct:FormItem
                            Description="将多级目录路径按指定层级转换为扁平化格式"
                            Header="最深目录层级">
                            <NumericUpDown
                                Increment="1"
                                Maximum="10000"
                                Minimum="0"
                                Value="{Binding Config.DeepestLevel}" />
                        </ct:FormItem>
                        <ct:FormItem Header="跳过已存在的文件">
                            <ToggleSwitch
                                VerticalAlignment="Center"
                                IsChecked="{Binding Config.SkipIfExist}"
                                OffContent="覆盖"
                                OnContent="跳过" />
                        </ct:FormItem>

                        <ct:FormItem
                            Description="{}{FileName}表示原文件名"
                            Header="目标文件名">
                            <TextBox
                                Width="200"
                                Text="{Binding Config.FileNameTemplate}" />
                        </ct:FormItem>
                        <ct:FormItem
                            Width="200"
                            Description="{}{FileName}表示原文文件夹名"
                            Header="目标文件夹名">
                            <TextBox Text="{Binding Config.FolderNameTemplate}" />
                        </ct:FormItem>
                    </ct:WrapFormItemGroup>
                </ct:FormItem>
                <ct:FormItem Label="压缩和复制：">
                    <ct:WrapFormItemGroup>
                        <ct:FormItem Header="复制后缀名">
                            <TextBox
                                MinWidth="200"
                                MaxWidth="400"
                                Text="{Binding Config.CopyDirectlyExtensions, Converter={x:Static cvt:Converters.StringList}}"
                                TextWrapping="Wrap" />
                        </ct:FormItem>

                        <ct:FormItem Header="压缩后缀名">
                            <TextBox
                                MinWidth="200"
                                MaxWidth="400"
                                Text="{Binding Config.CompressExtensions, Converter={x:Static cvt:Converters.StringList}}"
                                TextWrapping="Wrap" />
                        </ct:FormItem>
                    </ct:WrapFormItemGroup>
                </ct:FormItem>
                <ct:FormItem Label="图像压缩：">
                    <ct:WrapFormItemGroup>
                        <ct:FormItem Header="最大长边像素">
                            <NumericUpDown
                                Width="150"
                                Increment="10"
                                Maximum="20000"
                                Minimum="10"
                                Value="{Binding Config.MaxLongSize}" />
                        </ct:FormItem>
                        <ct:FormItem Header="最大短边像素">
                            <NumericUpDown
                                Width="150"
                                Increment="10"
                                Maximum="10000"
                                Minimum="10"
                                Value="{Binding Config.MaxShortSize}" />
                        </ct:FormItem>
                        <ct:FormItem Header="压缩后类型">
                            <TextBox
                                Width="120"
                                Text="{Binding Config.OutputFormat}" />
                        </ct:FormItem>
                        <ct:FormItem
                            Header="图像质量（%）"
                            IsVisible="{Binding}">
                            <NumericUpDown
                                Width="120"
                                FormatString="0"
                                Increment="10"
                                Maximum="100"
                                Minimum="10"
                                Watermark="10%—100%"
                                Value="{Binding Config.Quality}" />
                        </ct:FormItem>
                        <ct:FormItem Header="处理线程数">
                            <NumericUpDown
                                Width="120"
                                FormatString="0"
                                Increment="1"
                                Maximum="16"
                                Minimum="1"
                                Value="{Binding Config.Thread}" />
                        </ct:FormItem>
                    </ct:WrapFormItemGroup>
                </ct:FormItem>

            </ct:StackFormItemGroup>

        </StackPanel>

    </v:TwoStepPanelBase.ConfigsContent>
    <v:TwoStepPanelBase.ResultsContent>
        <Grid
            Grid.Row="6"
            ColumnDefinitions="*,8,*,8,*,8,*">
            <Grid.Styles>
                <Style Selector="ListBox">
                    <Setter Property="ItemTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding .}"
                                    TextWrapping="Wrap" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Styles>
            <gb:GroupBox Header="待复制">
                <Grid RowDefinitions="*,8,Auto">
                    <ListBox ItemsSource="{Binding CopyFiles.ProcessingFilesRelativePaths}" />
                    <TextBlock
                        Grid.Row="2"
                        IsVisible="{Binding CopyFiles, Converter={x:Static cvt:Converters.IsNotNull}}">
                        <Run Text="共" />
                        <Run Text="{Binding CopyFiles.ProcessingFiles.Count}" />
                        <Run Text="个文件，跳过" />
                        <Run Text="{Binding CopyFiles.SkippedFiles.Count}" />
                        <Run Text="个文件" />
                    </TextBlock>
                </Grid>
            </gb:GroupBox>
            <gb:GroupBox
                Grid.Column="2"
                Header="待压缩">
                <Grid RowDefinitions="*,8,Auto">
                    <ListBox ItemsSource="{Binding CompressFiles.ProcessingFilesRelativePaths}" />
                    <TextBlock
                        Grid.Row="2"
                        IsVisible="{Binding CompressFiles, Converter={x:Static cvt:Converters.IsNotNull}}">
                        <Run Text="共" />
                        <Run Text="{Binding CompressFiles.ProcessingFiles.Count}" />
                        <Run Text="个文件，跳过" />
                        <Run Text="{Binding CompressFiles.SkippedFiles.Count}" />
                        <Run Text="个文件" />
                    </TextBlock>
                </Grid>
            </gb:GroupBox>
            <gb:GroupBox
                Grid.Column="4"
                Header="待删除">
                <Grid RowDefinitions="*,8,Auto">
                    <ListBox ItemsSource="{Binding DeleteFiles.ProcessingFilesRelativePaths}" />
                    <TextBlock
                        Grid.Row="2"
                        IsVisible="{Binding DeleteFiles, Converter={x:Static cvt:Converters.IsNotNull}}">
                        <Run Text="共" />
                        <Run Text="{Binding DeleteFiles.ProcessingFiles.Count}" />
                        <Run Text="个文件，跳过" />
                        <Run Text="{Binding DeleteFiles.SkippedFiles.Count}" />
                        <Run Text="个文件" />
                    </TextBlock>
                </Grid>
            </gb:GroupBox>
            <gb:GroupBox
                Grid.Column="6"
                Header="错误信息">
                <Grid RowDefinitions="*,8,Auto">
                    <ListBox ItemsSource="{Binding ErrorMessages}" />
                    <TextBlock
                        Grid.Row="2"
                        IsVisible="{Binding ErrorMessages, Converter={x:Static cvt:Converters.IsNotNull}}">
                        <Run Text="共" />
                        <Run Text="{Binding ErrorMessages.Count}" />
                        <Run Text="条信息" />
                    </TextBlock>
                </Grid>
            </gb:GroupBox>

        </Grid>
    </v:TwoStepPanelBase.ResultsContent>
</v:TwoStepPanelBase>