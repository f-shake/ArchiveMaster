<v:PanelBase
    x:Class="ArchiveMaster.Views.BackupManageCenterPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:ArchiveMaster.Converters"
    xmlns:ctrl="clr-namespace:FzLib.Avalonia.Controls;assembly=FzLib.Avalonia"
    xmlns:cvt="using:ArchiveMaster.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:e="using:ArchiveMaster.Enums"
    xmlns:g="clr-namespace:GroupBox.Avalonia.Controls;assembly=GroupBox.Avalonia"
    xmlns:ic="using:FluentIcons.Avalonia.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:me="using:FzLib.Avalonia.MarkupExtensions"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:v="using:ArchiveMaster.Views"
    xmlns:vm="using:ArchiveMaster.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:BackupTasksViewModel"
    mc:Ignorable="d">
    <v:PanelBase.RightTopContent>
        <ToggleSwitch
            Margin="8"
            IsChecked="{Binding Config.EnableBackgroundBackup}"
            OffContent="自动备份总开关"
            OnContent="自动备份总开关" />
    </v:PanelBase.RightTopContent>
    <v:PanelBase.PanelContent>
        <Grid
            Margin="8"
            RowDefinitions="*,8,*">
            <Grid
                Grid.RowSpan="3"
                IsVisible="{Binding SelectedTask, Converter={x:Static cvt:Converters.IsNull}}"
                RowDefinitions="*,8,Auto">
                <v:BackupTaskDataGrid
                    ItemsSource="{Binding Tasks}"
                    SelectedItem="{Binding SelectedTask}" />
                <StackPanel
                    Grid.Row="2"
                    Orientation="Horizontal">
                    <Button
                        Classes="Icon"
                        Command="{Binding LoadTasksCommand}"
                        Content="{ic:FluentIcon Icon=ArrowClockwise}"
                        ToolTip.Tip="刷新" />
                </StackPanel>
            </Grid>

            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                IsVisible="{Binding !!SelectedTask}"
                Orientation="Horizontal"
                ZIndex="99">
                <TextBlock Text="{Binding SelectedTask.Name, StringFormat='{}当前选择的任务：{0}'}" />
                <!--  换了FluentIcon以后，有些按钮需要指定约束才可以正常显示尺寸，不然会在宽度或高度上撑满  -->
                <Button
                    Height="28"
                    Classes="Icon"
                    Command="{Binding LoadTasksCommand}"
                    Content="{ic:FluentIcon Icon=ArrowHookUpLeft}"
                    ToolTip.Tip="返回" />
            </StackPanel>

            <TabControl IsVisible="{Binding !!SelectedTask}">
                <TabItem Header="快照">
                    <v:SnapshotPanel />
                </TabItem>
                <TabItem Header="任务控制">
                    <v:BackupTaskOperationPanel />
                </TabItem>
            </TabControl>

            <TabControl
                Grid.Row="2"
                IsVisible="{Binding !!SelectedTask}"
                SelectedIndex="{Binding SelectedTabIndex}">
                <TabControl.Styles>
                    <Style Selector="Panel &gt; TextBlock">
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </TabControl.Styles>
                <TabItem
                    Header="变更内容"
                    IsVisible="{Binding !!SelectedSnapshot}">
                    <v:SnapshotChangesPanel />
                </TabItem>
                <TabItem
                    Header="快照文件"
                    IsVisible="{Binding !!SelectedSnapshot}">
                    <v:SnapshotFilesPanel />
                </TabItem>
                <TabItem
                    Header="文件历史记录"
                    IsVisible="{Binding !!SelectedFile}">
                    <v:SnapshotFileHistoryPanel />
                </TabItem>
                <TabItem
                    Header="日志"
                    IsVisible="{Binding SelectedSnapshot}">
                    <v:BackupLogsPanel />
                </TabItem>
            </TabControl>
        </Grid>
    </v:PanelBase.PanelContent>
</v:PanelBase>