<UserControl
    x:Class="ArchiveMaster.Views.ResultTextBox"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="clr-namespace:ArchiveMaster.Converters;assembly=ArchiveMaster.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ic="using:FluentIcons.Avalonia.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ArchiveMaster.ViewModels;assembly=ArchiveMaster.Core"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        ColumnDefinitions="*,8,Auto"
        RowDefinitions="*,4,Auto">

        <TextBox
            x:Name="result"
            Grid.ColumnSpan="3"
            Classes="Display"
            Text="{Binding $parent[UserControl].Result}" />
        <TextBlock
            Grid.Row="2"
            Text="{Binding $parent[UserControl].Message}" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Classes="Icon"
            Command="{Binding CopyTextCommand, Source={x:Static vm:GlobalCommands.Instance}}"
            CommandParameter="{Binding Result}"
            Content="{ic:FluentIcon Icon=Copy}"
            IsEnabled="{Binding $parent[UserControl].Result, Converter={x:Static cvt:Converters.IsNotNull}}" />
    </Grid>
</UserControl>
